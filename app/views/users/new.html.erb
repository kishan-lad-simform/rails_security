<%= form_with model: @user do |form| %>
  <div class="container">
    <h1 class="text-center">Add User</h1>
    <div class="row">  
      <div class="col-4">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control" %>
        <%= custom_error(@user, :name) %>
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :email %><br>
        <%= form.email_field :email, class: "form-control" %>
        <%= custom_error(@user, :email) %>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :password %><br>
        <%= form.password_field :password, class: "form-control" %>
        <%= custom_error(@user, :password) %>
      </div>
    </div> <br/>

    <div>
      <%= form.submit "Insert data", class: "btn btn-primary -center" %>
    </div>    
  </div>
<% end %>