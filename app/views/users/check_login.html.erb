<div class="container text-center"><br>
  <div class="card"> <br>
    <h1> User Login  </h1> 
    <%= form_with(url: login_path, method: :post) do |form| %>
      <div class="row">
        <div class="col-sm-4"></div>
          <div class="col-sm-4">
            <%= form.label 'Email' %>
            <%= form.email_field :email, class: "form-control", required: true %>
          </div>
      </div><br>

      <div class="row">
        <div class="col-sm-4"></div>
          <div class="col-sm-4">
            <%= form.label 'Password' %>
            <%= form.password_field :password, class: "form-control", required: true %><br>
          </div>
      </div>
        <%= form.submit 'Login', class: "btn btn-primary" %> &nbsp; &nbsp;
        <%= link_to 'Register user', new_user_path %> <br><br>
    <% end %>
  </div>
</div>